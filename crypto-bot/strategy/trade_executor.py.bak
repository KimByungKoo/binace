def analyze_candle_pattern(df: pd.DataFrame, idx: int) -> bool:
    """
    ìƒìŠ¹ë°˜ì „ ìº”ë“¤ íŒ¨í„´ì„ ë¶„ì„í•©ë‹ˆë‹¤.
    
    Args:
        df: ë°ì´í„°í”„ë ˆì„
        idx: í˜„ì¬ ì¸ë±ìŠ¤
        
    Returns:
        bool: ìƒìŠ¹ë°˜ì „ íŒ¨í„´ì´ë©´ True
    """
    if idx < 2:  # ìµœì†Œ 3ê°œì˜ ë´‰ì´ í•„ìš”
        return False
        
    current = df.iloc[idx]
    prev = df.iloc[idx-1]
    prev2 = df.iloc[idx-2]
    
    # 1. í•´ë¨¸ íŒ¨í„´
    def is_hammer(candle):
        body = abs(candle['close'] - candle['open'])
        lower_shadow = min(candle['open'], candle['close']) - candle['low']
        upper_shadow = candle['high'] - max(candle['open'], candle['close'])
        
        # í•˜ë‹¨ ê¼¬ë¦¬ê°€ ëª¸í†µì˜ 2ë°° ì´ìƒì´ê³ , ìƒë‹¨ ê¼¬ë¦¬ê°€ ì§§ìŒ
        return (lower_shadow > body * 2 and 
                upper_shadow < body * 0.3 and
                candle['close'] > candle['open'])  # ìƒìŠ¹ ë´‰
    
    # 2. ì—­í•´ë¨¸ íŒ¨í„´
    def is_inverted_hammer(candle):
        body = abs(candle['close'] - candle['open'])
        lower_shadow = min(candle['open'], candle['close']) - candle['low']
        upper_shadow = candle['high'] - max(candle['open'], candle['close'])
        
        # ìƒë‹¨ ê¼¬ë¦¬ê°€ ëª¸í†µì˜ 2ë°° ì´ìƒì´ê³ , í•˜ë‹¨ ê¼¬ë¦¬ê°€ ì§§ìŒ
        return (upper_shadow > body * 2 and 
                lower_shadow < body * 0.3 and
                candle['close'] > candle['open'])  # ìƒìŠ¹ ë´‰
    
    # 3. ëª°ë§ ìŠ¤íƒ€ íŒ¨í„´
    def is_morning_star():
        # ì²« ë²ˆì§¸ ë´‰: ê¸´ í•˜ë½ ë´‰
        first_body = abs(prev2['close'] - prev2['open'])
        is_first_long_down = (prev2['close'] < prev2['open'] and 
                            first_body > df['close'].rolling(20).std().iloc[idx] * 0.5)
        
        # ë‘ ë²ˆì§¸ ë´‰: ì‘ì€ ë´‰ (ìƒìŠ¹/í•˜ë½ ìƒê´€ì—†ìŒ)
        second_body = abs(prev['close'] - prev['open'])
        is_second_small = second_body < first_body * 0.3
        
        # ì„¸ ë²ˆì§¸ ë´‰: ìƒìŠ¹ ë´‰
        is_third_up = current['close'] > current['open']
        
        # ì„¸ ë²ˆì§¸ ë´‰ì´ ì²« ë²ˆì§¸ ë´‰ì˜ ì¤‘ê°„ ì´ìƒ ìƒìŠ¹
        price_recovery = (current['close'] - prev2['close']) / prev2['close'] * 100
        is_price_recovered = price_recovery > 0.5
        
        return (is_first_long_down and is_second_small and 
                is_third_up and is_price_recovered)
    
    # 4. ì‰ê±¸í•‘ íŒ¨í„´
    def is_bullish_engulfing():
        # ì´ì „ ë´‰ì´ í•˜ë½ ë´‰
        is_prev_down = prev['close'] < prev['open']
        
        # í˜„ì¬ ë´‰ì´ ìƒìŠ¹ ë´‰
        is_current_up = current['close'] > current['open']
        
        # í˜„ì¬ ë´‰ì´ ì´ì „ ë´‰ì„ ì™„ì „íˆ ê°ìŒˆ
        is_engulfing = (current['open'] < prev['close'] and 
                       current['close'] > prev['open'])
        
        return is_prev_down and is_current_up and is_engulfing
    
    # ëª¨ë“  íŒ¨í„´ ì¤‘ í•˜ë‚˜ë¼ë„ ë§Œì¡±í•˜ë©´ True
    return (is_hammer(current) or 
            is_inverted_hammer(current) or 
            is_morning_star() or 
            is_bullish_engulfing())

def analyze_candle(df: pd.DataFrame, idx: int) -> bool:
    """
