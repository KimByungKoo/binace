            if "partial_tp_levels" not in trade:
                trade["partial_tp_levels"] = []
            trade["partial_tp_levels"].append(level["pct"])
            
            daily_stats["partial_tp_hits"] += 1
            
            send_telegram_message(f"ğŸ¯ ë¶€ë¶„ ìµì ˆ ì‹¤í–‰: {symbol}\n"
