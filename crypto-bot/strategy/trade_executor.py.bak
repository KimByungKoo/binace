    lower_shadow = min(current['open'], current['close']) - current['low']
    body = abs(current['close'] - current['open'])
    has_short_lower_shadow = lower_shadow < body * 0.3 if body > 0 else False
    
    # 4. ìƒë‹¨ ê¼¬ë¦¬ê°€ ê¸´ì§€ í™•ì¸ (ìƒìŠ¹ ì••ë ¥ì´ ê°•í•¨)
    upper_shadow = current['high'] - max(current['open'], current['close'])
    has_long_upper_shadow = upper_shadow > body * 0.5 if body > 0 else False
    
    # 5. ì „ë´‰ì˜ ê³ ì ì„ ëŒíŒŒí–ˆëŠ”ì§€ í™•ì¸
    broke_prev_high = current['high'] > prev['high']
    
    # 6. ìƒìŠ¹ë°˜ì „ ìº”ë“¤ íŒ¨í„´ í™•ì¸
    has_reversal_pattern = analyze_candle_pattern(df, idx)
    
    # ëª¨ë“  ì¡°ê±´ì„ ë§Œì¡±í•˜ë©´ ìƒìŠ¹ ê°€ëŠ¥ì„±ì´ ë†’ìŒ
    return (is_bullish and is_higher and has_short_lower_shadow and 
            (has_long_upper_shadow or broke_prev_high or has_reversal_pattern))

def backtest_ma200_strategy(symbol: str, days: int = 90) -> Dict:
    """
    MA200 ì „ëµ ë°±í…ŒìŠ¤íŠ¸ë¥¼ ìˆ˜í–‰í•©ë‹ˆë‹¤.
    
    Args:
        symbol: ê±°ë˜ ì‹¬ë³¼
        days: ë°±í…ŒìŠ¤íŠ¸ ê¸°ê°„ (ì¼)
        
    Returns:
        Dict: ë°±í…ŒìŠ¤íŠ¸ ê²°ê³¼
    """
    try:
        # 3ê°œì›”ì¹˜ ë°ì´í„° ê³„ì‚° (1ë¶„ë´‰ ê¸°ì¤€)
        # 1ì¼ = 24ì‹œê°„ * 60ë¶„ = 1440ë´‰
        # 3ê°œì›” = 90ì¼ * 1440ë´‰ = 129,600ë´‰
        # MA200 + ìŠ¤ë¬´ë”© + ê°ë„ ê³„ì‚°ì„ ìœ„í•œ ì—¬ìœ ë¶„ í¬í•¨
        limit = 130000
        
        # ë°ì´í„° ê°€ì ¸ì˜¤ê¸°
        df = get_1m_klines(symbol, limit=limit)
        if df is None or len(df) < 380:
            return {"error": "ë°ì´í„° ë¶€ì¡±"}
            
        # timestamp ì»¬ëŸ¼ì„ datetimeìœ¼ë¡œ ë³€í™˜
        df['timestamp'] = pd.to_datetime(df['timestamp'], unit='ms')
        df.set_index('timestamp', inplace=True)
        
        # í˜„ì¬ ì‹œê°„ ê¸°ì¤€ìœ¼ë¡œ 3ê°œì›” ì „ë¶€í„°ì˜ ë°ì´í„°ë§Œ ì‚¬ìš©
        end_time = df.index[-1]
        start_time = end_time - pd.Timedelta(days=days)
        df = df[df.index >= start_time]
            
        # MA200 ê³„ì‚°
        df['MA200'] = df['close'].rolling(window=200).mean()
        
        # MA200 ìŠ¤ë¬´ë”© (5ë´‰)
        df['MA200_smooth'] = df['MA200'].rolling(window=5).mean()
        
        # ì´ê²©ë„ ê³„ì‚°
        df['disparity'] = ((df['close'] - df['MA200_smooth']) / df['MA200_smooth'] * 100)
        
        # ê°ë„ ê³„ì‚°
        df['angle'] = 0.0  # None ëŒ€ì‹  0.0ìœ¼ë¡œ ì´ˆê¸°í™”
        df['percent_change'] = 0.0  # None ëŒ€ì‹  0.0ìœ¼ë¡œ ì´ˆê¸°í™”
        
        # ê°ë„ ê³„ì‚° (20ë´‰ ê¸°ì¤€)
        for i in range(20, len(df)):
            # 20ë´‰ ì „ì˜ MA200 ê°’
            prev_ma = df['MA200_smooth'].iloc[i-20]
            # í˜„ì¬ MA200 ê°’
            current_ma = df['MA200_smooth'].iloc[i]
            
            # MA200 ê°’ì´ ìˆëŠ” ê²½ìš°ì—ë§Œ ê³„ì‚°
            if pd.notna(prev_ma) and pd.notna(current_ma) and prev_ma != 0:
                # ë³€í™”ìœ¨ ê³„ì‚°
                percent_change = ((current_ma - prev_ma) / prev_ma) * 100
                # ê°ë„ ê³„ì‚° (ë³€í™”ìœ¨ì„ ê°ë„ë¡œ ë³€í™˜)
                angle = math.degrees(math.atan(percent_change / 100))
                df.iloc[i, df.columns.get_loc('angle')] = angle
                df.iloc[i, df.columns.get_loc('percent_change')] = percent_change
        
        # ê±°ë˜ ì‹œê·¸ë„ ìƒì„±
        df['signal'] = 0
        
        # ë§¤ìˆ˜ ì¡°ê±´
        for i in range(1, len(df)):
            # 1. MA200 ê¸°ë³¸ ì¡°ê±´ í™•ì¸
            ma200_condition = (
                (df['disparity'].iloc[i] < -3.0) &  # ì´ê²©ë„ -3% ë¯¸ë§Œ
                (df['angle'].iloc[i] > 0) &  # MA200 ê°ë„ ì–‘ìˆ˜
                (df['percent_change'].iloc[i] > 0.1)  # MA200 ë³€í™”ìœ¨ 0.1% ì´ˆê³¼
            )
            
            # 2. MA200 ì¡°ê±´ì´ ë§Œì¡±ë˜ë©´ ìº”ë“¤ íŒ¨í„´ í™•ì¸
            if ma200_condition:
                candle_condition = analyze_candle(df, i)
                if candle_condition:
                    df.iloc[i, df.columns.get_loc('signal')] = 1
        
        # ë§¤ë„ ì¡°ê±´
        sell_condition = (
            (df['disparity'] > 1.0) |  # ì´ê²©ë„ 1% ì´ˆê³¼
            (df['angle'] < 0) |  # MA200 ê°ë„ ìŒìˆ˜
            (df['percent_change'] < -0.1)  # MA200 ë³€í™”ìœ¨ -0.1% ë¯¸ë§Œ
        )
        
        df.loc[sell_condition, 'signal'] = -1
        
        # ê±°ë˜ ì‹¤í–‰
        trades = []
        position = None
        entry_price = None
        entry_time = None
        
        for i in range(len(df)):
            if df['signal'].iloc[i] == 1 and position is None:  # ë§¤ìˆ˜ ì‹œê·¸ë„
                position = 'long'
                entry_price = df['close'].iloc[i]
                entry_time = df.index[i]
            elif df['signal'].iloc[i] == -1 and position == 'long':  # ë§¤ë„ ì‹œê·¸ë„
                exit_price = df['close'].iloc[i]
                profit = ((exit_price - entry_price) / entry_price) * 100
                trades.append({
                    'entry_time': entry_time,
                    'exit_time': df.index[i],
                    'entry_price': entry_price,
                    'exit_price': exit_price,
                    'profit': profit,
                    'exit_reason': 'ë§¤ë„ ì‹œê·¸ë„'
                })
                position = None
                entry_price = None
                entry_time = None
        
        # ë§ˆì§€ë§‰ í¬ì§€ì…˜ì´ ìˆë‹¤ë©´ ì²­ì‚°
        if position == 'long':
            exit_price = df['close'].iloc[-1]
            profit = ((exit_price - entry_price) / entry_price) * 100
            trades.append({
                'entry_time': entry_time,
                'exit_time': df.index[-1],
                'entry_price': entry_price,
                'exit_price': exit_price,
                'profit': profit,
                'exit_reason': 'ë°±í…ŒìŠ¤íŠ¸ ì¢…ë£Œ'
            })
        
        # ê²°ê³¼ ê³„ì‚°
        total_trades = len(trades)
        if total_trades == 0:
            return {
                "symbol": symbol,
                "total_trades": 0,
                "win_rate": 0,
                "total_profit": 0,
                "max_drawdown": 0,
                "profit_factor": 0,
                "trades": [],
                "start_time": df.index[0],
                "end_time": df.index[-1]
            }
        
        winning_trades = len([t for t in trades if t['profit'] > 0])
        win_rate = (winning_trades / total_trades) * 100
        total_profit = sum(t['profit'] for t in trades)
        
        # ìµœëŒ€ ì†ì‹¤í­ ê³„ì‚°
        max_drawdown = 0
        peak = 0
        for trade in trades:
            if trade['profit'] > peak:
                peak = trade['profit']
            drawdown = peak - trade['profit']
            if drawdown > max_drawdown:
                max_drawdown = drawdown
        
        # ìˆ˜ìµíŒ©í„° ê³„ì‚°
        gross_profit = sum(t['profit'] for t in trades if t['profit'] > 0)
        gross_loss = abs(sum(t['profit'] for t in trades if t['profit'] < 0))
        profit_factor = gross_profit / gross_loss if gross_loss != 0 else float('inf')
        
        return {
            "symbol": symbol,
            "total_trades": total_trades,
            "win_rate": win_rate,
            "total_profit": total_profit,
            "max_drawdown": max_drawdown,
            "profit_factor": profit_factor,
            "trades": trades,
            "start_time": df.index[0],
            "end_time": df.index[-1]
        }
        
    except Exception as e:
        print(f"[{symbol}] ë°±í…ŒìŠ¤íŠ¸ ì¤‘ ì˜¤ë¥˜ ë°œìƒ: {str(e)}")
        return {"error": str(e)}

