def execute_trades(df: pd.DataFrame) -> List[Dict]:
    """
    ë°±í…ŒìŠ¤íŠ¸ë¥¼ ìœ„í•œ ê±°ë˜ ì‹¤í–‰ í•¨ìˆ˜
    
    Args:
        df: ê°€ê²© ë°ì´í„°ê°€ í¬í•¨ëœ DataFrame
        
    Returns:
        List[Dict]: ê±°ë˜ ê¸°ë¡ ë¦¬ìŠ¤íŠ¸
    """
    trades = []
    position = None
    
    # RSI ê³„ì‚°
    delta = df['close'].diff()
    gain = (delta.where(delta > 0, 0)).rolling(window=14).mean()
    loss = (-delta.where(delta < 0, 0)).rolling(window=14).mean()
    rs = gain / loss
    df['rsi'] = 100 - (100 / (1 + rs))
    
    # ê±°ë˜ëŸ‰ ì´ë™í‰ê· 
    df['volume_ma'] = df['volume'].rolling(window=20).mean()
    
    # ë§¤ìˆ˜ ì¡°ê±´
    for i in range(1, len(df)):
        current = df.iloc[i]
        prev = df.iloc[i-1]
        
        # 1. MA200 ê¸°ë³¸ ì¡°ê±´ í™•ì¸
        ma200_condition = (
            (df['disparity'].iloc[i] < -3.0) &  # ì´ê²©ë„ -3% ë¯¸ë§Œ
            (df['angle'].iloc[i] > 0) &  # MA200 ê°ë„ ì–‘ìˆ˜
            (df['percent_change'].iloc[i] > 0.1)  # MA200 ë³€í™”ìœ¨ 0.1% ì´ˆê³¼
        )
        
        # 2. ì¶”ê°€ í•„í„° ì¡°ê±´
        filter_condition = (
            (df['rsi'].iloc[i] < 30) &  # RSI ê³¼ë§¤ë„ êµ¬ê°„
            (df['volume'].iloc[i] > df['volume_ma'].iloc[i] * 1.5) &  # ê±°ë˜ëŸ‰ 50% ì´ìƒ ì¦ê°€
            (df['close'].iloc[i] > df['close'].iloc[i-1])  # ì „ë´‰ ëŒ€ë¹„ ìƒìŠ¹
        )
        
        # 3. ìº”ë“¤ íŒ¨í„´ ì¡°ê±´ í™•ì¸ (MA200 ì¡°ê±´ê³¼ í•„í„° ì¡°ê±´ì´ ëª¨ë‘ ë§Œì¡±í•  ë•Œë§Œ)
        if ma200_condition and filter_condition:
            # ìº”ë“¤ ë¶„ì„
            body = abs(current['close'] - current['open'])
            upper_shadow = current['high'] - max(current['open'], current['close'])
            lower_shadow = min(current['open'], current['close']) - current['low']
            
            # ê¸°ë³¸ ìº”ë“¤ ì¡°ê±´ ê°•í™”
            is_bullish = current['close'] > current['open']  # ìƒìŠ¹ ë´‰
            is_higher = current['close'] > prev['close']     # ì „ë´‰ ëŒ€ë¹„ ìƒìŠ¹
            has_short_lower_shadow = lower_shadow < body * 0.2  # í•˜ë‹¨ ê¼¬ë¦¬ê°€ ë” ì§§ìŒ (0.3 â†’ 0.2)
            has_long_upper_shadow = upper_shadow > body * 0.7   # ìƒë‹¨ ê¼¬ë¦¬ê°€ ë” ê¹€ (0.5 â†’ 0.7)
            broke_prev_high = current['high'] > prev['high']    # ì „ë´‰ ê³ ì  ëŒíŒŒ
            
            # ìƒìŠ¹ë°˜ì „ ìº”ë“¤ íŒ¨í„´ í™•ì¸ (ì¡°ê±´ ê°•í™”)
            is_hammer = (
                is_bullish and
                lower_shadow > body * 2.5 and  # 2 â†’ 2.5
                upper_shadow < body * 0.2 and  # 0.3 â†’ 0.2
                current['close'] > prev['close']  # ì „ë´‰ ëŒ€ë¹„ ìƒìŠ¹ ì¶”ê°€
            )
            
            is_inverted_hammer = (
                is_bullish and
                upper_shadow > body * 2.5 and  # 2 â†’ 2.5
                lower_shadow < body * 0.2 and  # 0.3 â†’ 0.2
                current['close'] > prev['close']  # ì „ë´‰ ëŒ€ë¹„ ìƒìŠ¹ ì¶”ê°€
            )
            
            is_morning_star = False
            if i >= 2:
                first_candle = df.iloc[i-2]
                second_candle = df.iloc[i-1]
                
                first_body = abs(first_candle['close'] - first_candle['open'])
                second_body = abs(second_candle['close'] - second_candle['open'])
                
                is_morning_star = (
                    first_candle['close'] < first_candle['open'] and  # ì²« ë´‰ì´ í•˜ë½ ë´‰
                    second_body < first_body * 0.2 and  # ë‘˜ì§¸ ë´‰ì´ ë” ì‘ìŒ (0.3 â†’ 0.2)
                    is_bullish and  # ì…‹ì§¸ ë´‰ì´ ìƒìŠ¹ ë´‰
                    current['close'] > (first_candle['open'] + first_candle['close']) / 2 and  # ì²« ë´‰ì˜ ì¤‘ê°„ ì´ìƒ íšŒë³µ
                    current['close'] > prev['close']  # ì „ë´‰ ëŒ€ë¹„ ìƒìŠ¹ ì¶”ê°€
                )
            
            is_bullish_engulfing = (
                prev['close'] < prev['open'] and  # ì´ì „ ë´‰ì´ í•˜ë½ ë´‰
                is_bullish and  # í˜„ì¬ ë´‰ì´ ìƒìŠ¹ ë´‰
                current['open'] < prev['close'] and  # í˜„ì¬ ë´‰ì´ ì´ì „ ë´‰ì˜ ì‹œê°€ë³´ë‹¤ ë‚®ê²Œ ì‹œì‘
                current['close'] > prev['open'] and  # í˜„ì¬ ë´‰ì´ ì´ì „ ë´‰ì˜ ì‹œê°€ë³´ë‹¤ ë†’ê²Œ ì¢…ë£Œ
                current['close'] > prev['close'] * 1.02  # ì „ë´‰ ì¢…ê°€ë³´ë‹¤ 2% ì´ìƒ ìƒìŠ¹
            )
            
            # ì¶”ê°€: ë„ì§€ íŒ¨í„´
            is_doji = (
                body < (current['high'] - current['low']) * 0.1 and  # ëª¸í†µì´ ë§¤ìš° ì‘ìŒ
                current['close'] > prev['close']  # ì „ë´‰ ëŒ€ë¹„ ìƒìŠ¹
            )
            
            # ë§¤ìˆ˜ ì‹ í˜¸ ë°œìƒ (íŒ¨í„´ ì¡°ê±´ ê°•í™”)
            if ((is_hammer or is_inverted_hammer or is_morning_star or is_bullish_engulfing) and 
                (has_short_lower_shadow or has_long_upper_shadow or is_doji)):
                if position is None:  # í¬ì§€ì…˜ì´ ì—†ì„ ë•Œë§Œ ë§¤ìˆ˜
                    position = {
                        'entry_price': current['close'],
                        'entry_time': current.name,
                        'stop_loss': current['close'] * 0.98,  # 2% ì†ì ˆë§¤
                        'take_profit_1': current['close'] * 1.05,  # 5% ìµì ˆ 30%
                        'take_profit_2': current['close'] * 1.10,  # 10% ìµì ˆ 30%
                        'take_profit_3': current['close'] * 1.15,  # 15% ìµì ˆ 40%
                        'remaining_position': 1.0  # ë‚¨ì€ í¬ì§€ì…˜ ë¹„ìœ¨
                    }
        
        # ë§¤ë„ ì¡°ê±´ í™•ì¸ (ê¸°ì¡´ê³¼ ë™ì¼)
        if position is not None:
            # 1. ì†ì ˆë§¤ ì¡°ê±´
            if current['low'] <= position['stop_loss']:
                profit = (position['stop_loss'] - position['entry_price']) / position['entry_price'] * 100
                trades.append({
                    'entry_time': position['entry_time'],
                    'exit_time': current.name,
                    'entry_price': position['entry_price'],
                    'exit_price': position['stop_loss'],
                    'profit': profit,
                    'exit_type': 'stop_loss'
                })
                position = None
                continue
            
            # 2. ìµì ˆ ì¡°ê±´
            if current['high'] >= position['take_profit_3'] and position['remaining_position'] > 0:
                # 15% ìµì ˆ (40% í¬ì§€ì…˜)
                exit_amount = position['remaining_position'] * 0.4
                profit = (position['take_profit_3'] - position['entry_price']) / position['entry_price'] * 100
                trades.append({
                    'entry_time': position['entry_time'],
                    'exit_time': current.name,
                    'entry_price': position['entry_price'],
                    'exit_price': position['take_profit_3'],
                    'profit': profit,
                    'exit_type': 'take_profit_3',
                    'position_size': exit_amount
                })
                position['remaining_position'] -= exit_amount
            
            if current['high'] >= position['take_profit_2'] and position['remaining_position'] > 0:
                # 10% ìµì ˆ (30% í¬ì§€ì…˜)
                exit_amount = position['remaining_position'] * 0.3
                profit = (position['take_profit_2'] - position['entry_price']) / position['entry_price'] * 100
                trades.append({
                    'entry_time': position['entry_time'],
                    'exit_time': current.name,
                    'entry_price': position['entry_price'],
                    'exit_price': position['take_profit_2'],
                    'profit': profit,
                    'exit_type': 'take_profit_2',
                    'position_size': exit_amount
                })
                position['remaining_position'] -= exit_amount
            
            if current['high'] >= position['take_profit_1'] and position['remaining_position'] > 0:
                # 5% ìµì ˆ (30% í¬ì§€ì…˜)
                exit_amount = position['remaining_position'] * 0.3
                profit = (position['take_profit_1'] - position['entry_price']) / position['entry_price'] * 100
                trades.append({
                    'entry_time': position['entry_time'],
                    'exit_time': current.name,
                    'entry_price': position['entry_price'],
                    'exit_price': position['take_profit_1'],
                    'profit': profit,
                    'exit_type': 'take_profit_1',
                    'position_size': exit_amount
                })
                position['remaining_position'] -= exit_amount
            
            # 3. ê¸°ì¡´ ë§¤ë„ ì¡°ê±´ (MA200 ê´€ë ¨)
            sell_condition = (
                (df['disparity'].iloc[i] > 2.0) |  # ì´ê²©ë„ 2% ì´ˆê³¼
                (df['angle'].iloc[i] < 0) |  # MA200 ê°ë„ ìŒìˆ˜
                (df['percent_change'].iloc[i] < -0.1)  # MA200 ë³€í™”ìœ¨ -0.1% ë¯¸ë§Œ
            )
            
            if sell_condition and position['remaining_position'] > 0:
                profit = (current['close'] - position['entry_price']) / position['entry_price'] * 100
                trades.append({
                    'entry_time': position['entry_time'],
                    'exit_time': current.name,
                    'entry_price': position['entry_price'],
                    'exit_price': current['close'],
                    'profit': profit,
                    'exit_type': 'ma200_signal',
                    'position_size': position['remaining_position']
                })
                position = None
    
    return trades